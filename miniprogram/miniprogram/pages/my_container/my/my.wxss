/* miniprogram/pages/my_container/my/my.wxss */
.top-show-user{
  width: 100%;
  height: 27vh;
  background-color: #ED33C4;
}

.user-nav{
  width: 100%;
  height: 100%;
  
}
.avatar{
  width: 100rpx;
  height: 100rpx;
  margin-right: 16rpx;
}
.show-user-container{
  width: 100%;
  height: 100%;
}
.show-user{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 90%;
  height: 100%;
  margin: 0 auto;
  color: white;
}

.avatar-container{
  display: flex;
  align-items: center;
}

.show-tip {

  font-size: 28rpx;
  font-weight: bold;
}

.tip-down{
  font-size: 26rpx;
  font-weight: 400;
}
.request-tip{
  font-size: 24rpx;
  margin: 10rpx 0 0 30rpx;
}
.middle-my-request{
  background-color: white;
  margin-bottom: 10rpx;
}
.request-icons{
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 139rpx;

}

.request-icon{
  display: flex;
  align-items: center;
  background-color: rgb(241,240,241);
  font-size: 27rpx;
  padding: 20rpx 9% 20rpx 9%;
  border-radius: 60rpx;
}
.request-icons image{
  width: 50rpx;
  height: 50rpx;
  border-radius: 100%;
  margin-right: 20rpx;
}

.icon-class{
  width: 70rpx;
  height: 70rpx;
}

.icon-tip{
  font-size: 20rpx;
}

.middle-fun-tabs{
  margin-bottom: 54rpx;
}

.footer-button{
  width: 100%;
}

.button{
  margin: 0 auto;
  width: 80%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50rpx;
  background: linear-gradient(90deg, rgb(145,100,233),rgb(233,53,196));
  font-size: 26rpx;
  color: white;
}

