.theme-part{
  margin-bottom: 16rpx;
}

.theme-header{
  background-color: white;
  width: 100%;

}

.theme-header-content{
  border-bottom: 1px solid rgba(0, 0, 0, 0.25);
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 94%;
  margin: 0 auto;
  padding: 16rpx 0;

}

.theme-tip{
  font-size: 30rpx;
  font-weight: bold;
}

.theme-show-container{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;

}

.part{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 19rpx 0 8rpx 0;

}

.cover-img{
  width: 230rpx;
  height: 177rpx;
}

.cover-img image{

  object-fit: cover;
  height: 100%;
  width: 100%;
  border-radius: 11rpx;

}

.part-footer{
  color: grey;
  font-size: 26rpx;
  text-align: start;
  width: 100%;
}

.part-footer-top{
  margin: 8rpx 0;
}

